		{
			"name":"message",
			"id":"message",
			"type":"Textarea",
			"label":"Message",
			"required":true,
            "filter":"STRING",
            "minlength":3,
            "maxlength":255,
            "input_type":"textarea"
		},
        {
			"name":"submit",
			"id":"submit",
			"type":"HTML",
