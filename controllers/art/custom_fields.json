
		{
			"title":"Art",
			"id":"art",
			"list":["artthumbnail","artlocation"],
			"fields":[
				{
					"name":"artthumbnail",
					"id":"artthumbnail",
					"type":"Image",
					"label":"Image",
					"required":false,
					"default":0
				},
				{
					"type":"Select",
					"id":"artmedia",
					"name":"artmedia",
					"required":true, 
					"label":"Media",
					"default":"oil",
						"filter":"STRING",
						"placeholder":"Please select",
					"select_options":[
						{"text":"Oil Paint","value":"Oil Paint"},
						{"text":"Acrylic","value":"Acrylic"},
						{"text":"Gouache","value":"Gouache"},
						{"text":"Oil Pastel","value":"Oil Pastel"}
					]
				},
				{
					"type":"Select",
					"id":"artdimensions",
					"name":"artdimensions",
					"required":true, 
					"label":"Dimensions",
					"default":"6x6",
						"filter":"STRING",
						"placeholder":"Please select",
					"select_options":[
						{"text":"6x6","value":"6x6"},
						{"text":"11x7","value":"11x7"},
						{"text":"12x12","value":"12x12"},
						{"text":"24x16","value":"24x16"}
					]
				},
				{
					"type":"Contentselector",
					"content_type":3,
					"multiple":false,
					"id":"artlocation",
					"name":"artlocation",
					"required":true, 
					"label":"Location",
					"description":"Select where this work is currently available to view/purchase. (Some locations may be unlisted, and nothing will be shown)",
					"default":5
				},
				{
					"type":"Select",
					"id":"artstatus",
					"name":"artstatus",
					"required":true, 
					"label":"Status",
					"default":"Available",
						"filter":"STRING",
						"placeholder":"Please select",
					"select_options":[
						{"text":"Available","value":"Available"},
						{"text":"Sold","value":"Sold"},
						{"text":"In Progress","value":"In Progress"}
					]
				},
				{
					"type":"Text",
					"filter":"INT",
					"id":"price",
					"name":"price",
					"default":0,
					"required":false,
					"label":"Price",
					"description":"Will be shown in dollars. No cents please - whole numbers only!"
				},
				{
					"type":"Text",
					"filter":"URL",
					"id":"shopurl",
					"name":"shopurl",
					"required":false,
					"label":"Shop URL",
					"description":"Direct link to cart/purchase page if available"
				},
				{
					"name":"artdescription",
					"id":"artdescription",
					"type":"Rich",
					"filter":"RAW",
					"required":false,
					"label":"Extended Description",
					"description":"Not required, but useful!"
				},
				{
					"name":"artimages",
					"id":"artimages",
					"type":"Repeatable",
					"label":"Other Images",
					"required":false,
					"form_path":"/controllers/art/artimages.json",
					"description":"Include any other images of this work here for a mini gallery!"
				}
			]
		}