
		{
			"title":"Location",
			"id":"location",
			"list":["listlocation"],
			"fields":[
				{
					"type":"Text",
					"id":"locationaddress",
					"name":"locationaddress",
					"required":false, 
					"label":"Address",
					"filter":"STRING"
				},
				{
					"type":"Text",
					"id":"locationcity",
					"name":"locationcity",
					"required":true, 
					"label":"City",
					"filter":"STRING"
				},
				{
					"type":"Text",
					"id":"locationstate",
					"name":"locationstate",
					"required":true, 
					"label":"State",
					"default":"MI",
					"filter":"STRING"
				},
				{
					"type":"Text",
					"id":"locationweb",
					"name":"locationweb",
					"required":false, 
					"label":"Website",
					"filter":"URL"
				},
				{
					"type":"Rich",
					"id":"locationdesc",
					"name":"locationdesc",
					"required":false, 
					"label":"Description",
